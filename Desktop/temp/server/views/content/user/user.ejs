<%- include ../../partials/header.ejs %>

<%- include ../../partials/top_nav.ejs %>
<%- include ../../partials/login_nav.ejs %>

  <!-- content -->
  <div class="container-fluid btn-light p-5">
    <div>
      <a type="button" class="btn btn-success" href="/users/add"><i class="fas fa-user-plus"></i> Add User</a>
      </div>
      <br>
      <small class="form-text text-muted">NOTE: The list is sorted alphabetically by Contact Name.</small>
      <br><br>
    <table class="table table-hover table-dark">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Contact Name</th>
            <th scope="col">Contact Number</th>
            <th scope="col">Email</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
           <% for(let i = 1; i <= UserList.length; i++) { %>
            <tr>
                <th scope="row"><%= i %></th>
                <td><%= UserList[i-1].contactName %></td>
                <td><%= UserList[i-1].contactNumber %></td>
                <td><%= UserList[i-1].emailAddress %></td>
                <td><a class="btn btn-primary" href="/users/edit/<%= UserList[i-1]._id %>"><i class="fas fa-user-edit"></i> Edit</a>
                    <a class="btn btn-danger" href="/users/delete/<%= UserList[i-1]._id %>"><i class="fas fa-user-times"></i> Delete</a></td>
            </tr>
            <% } %>
        
        </tbody>
    </table>
</div>
   
<%- include ../../partials/bottom_nav.ejs %>
<%- include ../../partials/footer.ejs %>
