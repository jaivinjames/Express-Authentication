<%- include ../partials/header.ejs%>

<%- include ../partials/main_nav.ejs%>

    <!-- Content for Add page-->
    <div class=" main_container">
        <div class="row">
            <div class="offset-md-2 col-md-6">
            <h1><%= title %></h1>
  
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField"> Username</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the User Name"
                    name="username" required>
                </div>
  
                <form class="form" method="POST">
                    <div class="form-group">
                        <label for="passwordTextField"> Password</label>
                        <input type="text" class="form-control"
                        id="passwordTextField"
                        placeholder="Enter the Password"
                        name="password" required>
                    </div>    
  
                    <form class="form" method="POST">
                        <div class="form-group">
                            <label for="emailTextField"> Email</label>
                            <input type="text" class="form-control"
                            id="emailTextField"
                            placeholder="Enter the Email address"
                            name="email" required>
                        </div>
        
                        <button class="btn btn-primary">
                            <i class="fas fa-edit"></i> Submit </button>

                            <a href="/users-list" class="btn btn-warning">
                                <i class="fas fa-undo"></i> Cancel</a>
            </form>

        </div>
    </div>
    </div>
    
<%- include ../partials/bottom_nav.ejs%>
<%- include ../partials/footer.ejs%>